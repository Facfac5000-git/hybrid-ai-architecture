# Configuración de desarrollo local
NODE_ENV=development
LOG_LEVEL=INFO

# URLs de servicios
AI_SERVICE_URL=http://ai-service:8000
EDGE_SERVICE_URL=http://edge-agent:8001
ORCHESTRATION_SERVICE_URL=http://orchestration-service:3000

# Puertos
ORCHESTRATION_PORT=3000
AI_SERVICE_PORT=8000
EDGE_AGENT_PORT=8001

# Redis
REDIS_URL=redis://redis:6379

# Límites operativos
LATENCIA_LIMITE_EDGE=100
CARGA_LIMITE_CLOUD=80
MAX_WORKERS=4

# Configuración de modelos
DEFAULT_MODEL=modelo_basico
MODEL_CACHE_ENABLED=true

# Logging
LOG_FORMAT=json
PYTHONPATH=/app/src
