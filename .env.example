# Configuración de la Arquitectura Híbrida AI
# Copiar este archivo como .env y ajustar los valores según el entorno

# === SERVICIOS ===
# URLs de los microservicios
AI_SERVICE_URL=http://localhost:8000
EDGE_SERVICE_URL=http://localhost:8001
ORCHESTRATION_SERVICE_URL=http://localhost:3000

# === PUERTOS ===
ORCHESTRATION_PORT=3000
AI_SERVICE_PORT=8000
EDGE_AGENT_PORT=8001

# === CONFIGURACIÓN DE ENTORNO ===
NODE_ENV=development
LOG_LEVEL=INFO
PYTHONPATH=/app/src

# === REDIS ===
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# === LÍMITES Y CONFIGURACIÓN ===
# Límite de latencia para edge (ms)
LATENCIA_LIMITE_EDGE=100
# Límite de carga del sistema cloud (%)
CARGA_LIMITE_CLOUD=80
# Máximo de workers para FastAPI
MAX_WORKERS=4

# === SEGURIDAD ===
# Clave secreta para JWT (generar una nueva en producción)
JWT_SECRET=your-secret-key-here
# Tiempo de expiración de tokens (en segundos)
JWT_EXPIRATION=3600

# === MONITOREO ===
# Prometheus
PROMETHEUS_PORT=9090
# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# === NGINX ===
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === BASE DE DATOS (para futuras extensiones) ===
DATABASE_URL=postgresql://user:password@localhost:5432/hybrid_ai
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hybrid_ai
DATABASE_USER=user
DATABASE_PASSWORD=password

# === CONFIGURACIÓN DE MODELOS ===
# Modelo por defecto
DEFAULT_MODEL=modelo_basico
# Directorio de modelos (para modelos ML reales)
MODELS_DIR=/app/models
# Caché de modelos habilitado
MODEL_CACHE_ENABLED=true
MODEL_CACHE_TTL=3600

# === CONFIGURACIÓN DE EDGE ===
EDGE_MODE=false
EDGE_LOCATION=local
EDGE_CAPACITY=100

# === CONFIGURACIÓN DE LOGGING ===
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# === CONFIGURACIÓN DE HEALTH CHECKS ===
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
